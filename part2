import cv2 as cv
import numpy as np
cap = cv.VideoCapture(0)
cv.namedWindow("Video")

while True:
    #capture each frame
    _, frame = cap.read()

    gray = cv.cvtColor(frame, cv.COLOR_BGR2GRAY)
    
    status, img = cap.read()
    cv.imshow("Video", img)
    k = cv.waitKey(5) & 0xFF
    if k == 27:
        break
cv.destroyAllWindows()
