import cv2 as cv
import numpy as np
cap = cv.VideoCapture(0)
#cv.namedWindow("Video")

#capture each frame
_, frame = cap.read()

#turn image to gray
gray = cv.cvtColor(frame, cv.COLOR_BGR2GRAY)

#get grayscale with dimensions
weight, height, channel = frame.shape

print(weight,height,channel)
#get 3 channel image 32float

#float32
flooo = np.zeros((weight,height,3), dtype = np.float32)

#black and white image
bw = np.zeros((weight,height,1), dtype = np.uint8)

#copy/clone image
copied = frame.copy



while True:
    
    status, img = cap.read()

    cv.imshow("video",img)
    cv.imshow("gray",gray)
##    cv.imshow("flooo",flooo)
##    cv.imshow("bw",bw)

    # absolute difference
    # abs_video = cv.AbsDiff(channel_r,channel_g,channel_b)
    
    
    k = cv.waitKey(5) & 0xFF
    if k == 27:
        break
cv.destroyAllWindows()


